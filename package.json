{
    "name": "nestjs-grpc-example",
    "version": "1.0.0",
    "description": "Example repository demonstrating the nestjs-grpc package",
    "author": "Your Name",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "update:packages": "npx npm-check-updates -u",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "proto:generate": "nestjs-grpc generate -p ./protos/**/*.proto -o ./src/generated"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.13.3",
        "@grpc/proto-loader": "^0.7.15",
        "@nestjs/common": "^11.0.20",
        "@nestjs/core": "^11.0.20",
        "@nestjs/microservices": "^11.0.20",
        "@nestjs/platform-express": "^11.0.20",
        "@nestjs/platform-socket.io": "^11.0.20",
        "@nestjs/websockets": "^11.0.20",
        "chalk": "^5.4.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "glob": "^11.0.1",
        "nestjs-grpc": "file:.yalc/nestjs-grpc",
        "protobufjs": "^7.5.0",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.2",
        "socket.io": "^4.8.1",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.6",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.0.20",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.1",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "@typescript-eslint/parser": "^8.30.1",
        "eslint": "^9.25.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.2",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}